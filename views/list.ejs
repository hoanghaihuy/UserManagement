<h1 class="display-4">Users</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Updated At</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user){ %>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.lastName %>
                        <%= user.firstName%>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.role %>
                </td>
                <td>
                    <%= user.createdAt %>
                </td>
                <td>
                    <%= user.updatedAt %>
                </td>
                <td>
                    <a href="/users/edit/<%= user.id %>" class="btn btn-primary">Edit</a>
                    <form class="d-inline" action="/users/delete/<%= user.id %>" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>